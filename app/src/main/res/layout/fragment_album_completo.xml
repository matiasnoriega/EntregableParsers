<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.matias.entregableparsers.view.AlbumCompletoFragment"
    android:id="@+id/frameLayoutAlbumCompleto"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/image_fragment_pantallaCompleta"
        android:scaleType="centerCrop"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="@string/hello_blank_fragment"
        android:layout_gravity="top|center_horizontal"
        android:gravity="center"
        android:textStyle="bold"
        android:fontFamily="casual"
        android:textSize="30dp"
        android:id="@+id/textViewTituloAlbumCompleto"
        android:background="@color/fondoSombreado"/>

</FrameLayout>
